{
    "compilerOptions": {
        "target": "es2021",
        "module": "commonjs",
        "allowJs": true,
        "baseUrl": "./src",
        "paths": {
            "@modules/*": ["modules/*"],
            "@shared/*": ["shared/*"],
            "@config/*": ["config/*"]
        },
        "esModuleInterop": true,
        "skipLibCheck": true,
        "strictPropertyInitialization": false,
        "forceConsistentCasingInFileNames": true,
        "resolveJsonModule": true,
        "experimentalDecorators": true,
        "emitDecoratorMetadata": true
    }
}
